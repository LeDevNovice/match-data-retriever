{
    "compilerOptions": {
      "target": "ESNext",
      "module": "ESNext",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "outDir": "./dist",
      "baseUrl": "./",
      "strict": true,
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "forceConsistentCasingInFileNames": true,
      "removeComments": true,
      "exactOptionalPropertyTypes": true,
      "noImplicitReturns": true,
      "noImplicitAny": true,
      "noUnusedParameters": true
    },
    "tsc-alias": {
      "resolveFullPaths": true,
      "verbose": false
    },
    "include": ["src/**/*"],
}
